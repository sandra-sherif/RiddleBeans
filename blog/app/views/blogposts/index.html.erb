 <h1>Listing blogposts</h1>
 <%= link_to 'New post', new_blogpost_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @blogposts.each do |blogpost| %>
    <tr>
      <td><%= blogpost.title %></td>
      <td><%= blogpost.text %></td>
      <td><%= link_to 'Show', blogpost_path(blogpost) %></td>
      <td><%= link_to 'Edit', edit_blogpost_path(blogpost) %></td>
      <td><%= link_to 'Destroy', blogpost_path(blogpost),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>